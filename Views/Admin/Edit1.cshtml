@model BeTa.Models.BunBo

@{
    ViewBag.Title = "Edit1";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2 style="text-align:center">Chỉnh sửa thông tin</h2>

@using (Html.BeginForm("Edit1", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="text-align:center">Bún bò</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="margin-left:auto">

            <div class="col-md-10" style="padding-left:600px; padding-top:20px">
                Tên món :
                @Html.EditorFor(model => model.Tenmon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tenmon, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left: auto">

            <div class="col-md-10" style="padding-left:600px; padding-top:20px">
                Giá tiền :
                @Html.EditorFor(model => model.GiaTien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GiaTien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left: auto">

            <div class="col-md-10" style="padding-left:600px; padding-top:20px">
                Tình trạng :
                @Html.EditorFor(model => model.Tinhtrang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tinhtrang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left: auto">

            <div class="col-md-10" style="padding-left:600px; padding-top:20px">
                Ảnh bìa :
                <input type="file" name="fileupload" />
                <p>@ViewBag.ThongBao</p>
            </div>
        </div>

        <div class="form-group" style="margin-left: auto">

            <div class="col-md-10" style="padding-left:600px; padding-top:20px">
                Mô tả :
                @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left: auto">
            <div class="col-md-offset-2 col-md-10" style="text-align:center;padding-top:20px">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div style="text-align:left">
    @Html.ActionLink("Quay lại menu", "MonAn")
</div>
