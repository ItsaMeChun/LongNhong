@model IEnumerable<BeTa.Models.BunBo>

@{
    ViewBag.Title = "MonAn";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2 style="text-align:center">MENU</h2>

<p style="text-align:center">
    @Html.ActionLink("Thêm mới", "ThemMoi")
</p>
<table class="table" style="margin:auto;outline:auto">
    <tr>
        <th style="padding: 30px; outline:dashed">
            @Html.DisplayNameFor(model => model.Tenmon)
        </th>
        <th style="padding: 30px; outline: auto">
            @Html.DisplayNameFor(model => model.GiaTien)
        </th>
        <th style="padding: 30px; outline: auto">
            @Html.DisplayNameFor(model => model.Tinhtrang)
        </th>
        <th style="padding: 30px; outline: auto">
            Hình ảnh
        </th>
        <th style="padding: 30px; outline: auto">
            Mô tả
        </th>
        <th style="padding: 30px; outline: auto"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="padding: 30px; outline: auto">
            @Html.DisplayFor(modelItem => item.Tenmon)
        </td>
        <td style="padding: 30px; outline: auto">
            @Html.DisplayFor(modelItem => item.GiaTien)
        </td>
        <td style="padding: 30px; outline: auto">
            @Html.DisplayFor(modelItem => item.Tinhtrang)
        </td>
        <td style="padding: 30px; outline: auto">
           <img src="~/images/@Html.DisplayFor(modelItem => item.Img)" style="width: 90px; height: 90px; "  />
        </td>
        <td style="padding: 30px; outline: auto">
            @Html.DisplayFor(modelItem => item.Mota)
        </td>
        <td style="padding: 30px; outline: auto">
            @Html.ActionLink("Edit", "Edit", new { id = item.Mamon }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Mamon })
        </td>
    </tr>
}

</table>
